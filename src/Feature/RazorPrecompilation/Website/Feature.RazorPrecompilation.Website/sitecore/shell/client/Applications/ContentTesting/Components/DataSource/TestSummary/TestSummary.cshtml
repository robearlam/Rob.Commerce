@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.UserControls
@model RenderingModel
@{
  var rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
  rendering.Requires.Script("contenttesting", "TestSummary.js");
  rendering.Attributes["data-sc-testid"] = rendering.GetString("TestId", "testId");
  rendering.Attributes["data-sc-maximum-suggestions"] = rendering.GetString("MaximumSuggestions", "maximumSuggestions");

  var htmlAttributes = rendering.HtmlAttributes;
}      
<script type="x-sitecore-testsummarydatasource" @htmlAttributes>
</script>
