@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.UserControls
@model RenderingModel
@{
    var rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
    rendering.Class = "sc-ScoreGainedSpot";
    rendering.Requires.Css("contenttesting", "spots.css");
    rendering.Requires.Css("contenttesting", "ScoreGainedSpot.css");
    rendering.Requires.Script("contenttesting", "ScoreGainedSpot.js");
    rendering.GetString("Score", "Score");

    var htmlAttributes = rendering.HtmlAttributes;
}

<div @htmlAttributes>
    <div class="spot">
        <div class="sc-ScoreGainedSpot-value">
            <span class="new-score">...</span>
        </div>
        Score gained <br />        
    </div>
</div>
