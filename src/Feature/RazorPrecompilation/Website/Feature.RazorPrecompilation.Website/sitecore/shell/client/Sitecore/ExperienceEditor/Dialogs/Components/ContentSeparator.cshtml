@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.UserControls

@model RenderingModel
@{
    var rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
    rendering.Requires.Css("ExperienceEditor", "ContentSeparator.css");
    var htmlAttributes = rendering.HtmlAttributes;
}

<div class="contentSeparator" @htmlAttributes>
    <img class="separatorImage" src="/sitecore/shell/client/Sitecore/ExperienceEditor/Dialogs/Components/Images/separator.png" />
</div>