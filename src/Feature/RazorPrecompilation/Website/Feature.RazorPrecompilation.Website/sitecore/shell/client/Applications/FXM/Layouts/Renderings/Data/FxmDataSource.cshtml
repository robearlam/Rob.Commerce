@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.UserControls
@model RenderingModel
@{
    var rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
    rendering.Class = "FxmDataSource";
    rendering.Requires.Script("FXM", "FxmDataSource.js");

    rendering.Attributes["data-sc-queryString"] = rendering.GetString("queryString", "queryString", string.Empty);
    rendering.Attributes["data-sc-requestMethod"] = rendering.GetString("requestMethod", "requestMethod", "POST");
    rendering.Attributes["data-sc-baseUrl"] = rendering.GetString("baseUrl", "baseUrl", "/sitecore/api/ssc/");
    
    
    var htmlAttributes = rendering.HtmlAttributes;
}      
<script @htmlAttributes></script>
