@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.UserControls
@model RenderingModel
@{
    var rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
    rendering.Class = "sc-PersonalizationRuleDataSource";
    rendering.Requires.Script("contenttesting", "PersonalizationRuleDataSource.js");

    rendering.Attributes["data-sc-language"] = rendering.GetString("Language");
    rendering.Attributes["data-sc-version"] = rendering.GetString("Version");
    rendering.Attributes["data-sc-itemid"] = rendering.GetString("ItemId");

    var htmlAttributes = rendering.HtmlAttributes;
}
<div @htmlAttributes>
</div>
