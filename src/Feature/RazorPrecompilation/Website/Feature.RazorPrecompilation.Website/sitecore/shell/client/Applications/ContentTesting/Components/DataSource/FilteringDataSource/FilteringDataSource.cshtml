@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.UserControls
@model RenderingModel
@{
  var rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
  rendering.Requires.Script("client", "FilteringDataSource.js");

  rendering.Attributes["data-sc-sourceitems"] = rendering.GetString("SourceItems", "sourceItems");

  var htmlAttributes = rendering.HtmlAttributes;
}      
<script type="x-sitecore-filteringdatasource" @htmlAttributes>
</script>
