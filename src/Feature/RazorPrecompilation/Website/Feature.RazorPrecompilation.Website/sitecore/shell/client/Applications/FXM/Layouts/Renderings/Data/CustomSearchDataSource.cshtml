@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.UserControls
@model RenderingModel
@{
  var rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
  rendering.Class = "sc-CustomSearchDataSource";
  rendering.Requires.Script("FXM", "CustomSearchDataSource.js");

  rendering.Attributes["data-sc-searchText"] = rendering.GetString("searchText", "searchText", string.Empty);
  rendering.Attributes["data-sc-pageSize"] = rendering.GetString("pageSize", "pageSize", "8");
  rendering.Attributes["data-sc-pageIndex"] = rendering.GetString("pageIndex", "pageIndex", "0");
  rendering.Attributes["data-sc-autoRefresh"] = rendering.GetString("autoRefresh", "autoRefresh", "true");

  rendering.Attributes["data-sc-sorting"] = rendering.GetString("sorting", "sorting", "");
  rendering.Attributes["data-sc-baseUrl"] = rendering.GetString("baseUrl", "baseUrl", "0");
  rendering.Attributes["data-sc-pagingMode"] = rendering.GetString("pagingMode", "pagingMode", "0");

  var htmlAttributes = rendering.HtmlAttributes;
}      
<script @htmlAttributes></script>
