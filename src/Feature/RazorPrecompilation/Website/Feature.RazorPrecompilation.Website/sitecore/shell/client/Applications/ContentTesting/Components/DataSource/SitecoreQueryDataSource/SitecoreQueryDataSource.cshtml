@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.UserControls
@model RenderingModel
@{
  var rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
  rendering.Requires.Script("contenttesting", "SitecoreQueryDataSource.js");
  rendering.Attributes["data-sc-query"] = rendering.GetString("Query", "query", "");
  rendering.Attributes["data-sc-root"] = rendering.GetString("RootItem", "root", "");
  rendering.Attributes["data-sc-database"] = rendering.GetString("Database", "database", "");

  var htmlAttributes = rendering.HtmlAttributes;
}      
<script type="x-sitecorequery-datasource" @htmlAttributes>
</script>
