@using Sitecore.Mvc
@model Sitecore.ExperienceForms.Client.Models.ImageSelectorRenderingModel
@{
    Model.HasNestedControls = true;
    Model.Class.Append("sc-imageselector");
    Model.DataBind.IsVisible().IsEnabled();
}

<div @Model.HtmlAttributes>
    <div class="sc-small-bottom-padding">
        <div class="sc-formlabeltop">
            <span data-bind="text: LabelForSelectImage">@Model.LabelForSelectImage</span></div>
        <div class="input-group sc-bottom-margin">
            <div class="sc-buttontextbox input-group">
                <input class="form-control"
                       data-bind="value:Path, attr:{ title: Path }"
                       readonly="readonly"/>
                <span class="input-group-btn">
                    <button data-bind="click:clickHandler" class="btn sc-button btn-default">
                        <span class="sc-button-text" data-bind="text: LabelForButton">@Model.LabelForButton</span>
                    </button>
                </span>
            </div>
            <span class="input-group-btn sc-imageselector-remove" data-bind="click:$root.clearImage">×</span>
        </div>
    </div>
    <div class="sc-small-bottom-padding">
        <div class="sc-border sc-align-center sc-imageselector-imageborder">
            @Html.RenderView("{9C2B35A3-791E-4363-9073-37D237E386B0}", new
            {
                ID = "ThumbnailImage",
                Width = 280
            })
        </div>
    </div>
</div>
