@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.UserControls
@model RenderingModel
@{
    var rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
    rendering.Class = "sc-ResizableFrameGrip";
    rendering.Requires.Script("contenttesting", "ResizableFrameGrip.js");
    rendering.Requires.Css("contenttesting", "ResizableFrameGrip.css");

    var htmlAttributes = rendering.HtmlAttributes;
}
<div @htmlAttributes>
    <img src="/sitecore/shell/themes/standard/Images/Galleries/Grip.png"></img>
</div>
