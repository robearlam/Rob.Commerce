@using Sitecore.XA.Foundation.MarkupDecorator.Extensions
@using Sitecore.XA.Foundation.SitecoreExtensions.Extensions
@model Sitecore.XA.Feature.PageStructure.Models.ToggleRenderingModel
@{
    const string placeholderKeyPrefix = "toggle";
    var key = string.Format("{0}-{1}", placeholderKeyPrefix, Model.Id);
}
<div @Html.Sxa().Component(Model.Rendering.RenderingCssClass ?? "toggle", Model.Attributes) data-properties="@Model.JavaScriptProperties">
    <div class="component-content">
        <details class="toggle-content clearfix">
            <summary class="toggle-header" tabindex="0">
                <span class="toggle-label">
                    @if (Model.DataSourceItem == null)
                    {
                        @Model.MessageIsEmpty
                    }
                    else
                    {
                        @Html.Sitecore().Field("Text", Model.DataSourceItem, Model.GetRenderingWebEditingParams())
                    }
                </span>
            </summary>
            @Html.Sitecore().Placeholder(key)
        </details>
    </div>
</div>
