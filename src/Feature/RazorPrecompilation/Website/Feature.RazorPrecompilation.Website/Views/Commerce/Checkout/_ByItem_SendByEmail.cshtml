@{
    var deliveryPage = Html.Sitecore().CurrentItem;

    var sendByEmailHeaderLabel = Html.Sitecore().Field("Send by Email Header", deliveryPage);
    var sendToMeLabel = Html.Sitecore().Field("Send to Me Label", deliveryPage);
    var recilientEmailLabel = Html.Sitecore().Field("Recipient Email Label", deliveryPage);
    var recilientEmailLabelPlaceholder = deliveryPage["Recipient Email Label"];
    var writeMessageLabel = Html.Sitecore().Field("Write Message Label", deliveryPage);
}
<div class="send-byemail-title">
    <h3>@sendByEmailHeaderLabel</h3>
</div>
<!-- ko if: $root.isAuthenticated() -->
<div class="send-byemail-tome">
    <input type="checkbox" data-bind="attr: {id: 'sendEmailToMe-'+ externalCartLineId}, event: {change: $root.setSendToMe}">
    <label data-bind="attr: {for:'sendEmailToMe-'+ externalCartLineId}">@sendToMeLabel</label>
</div>
<!-- /ko -->
<div class="send-byemail-recilient">
    <label data-bind="attr:{for:'shippingEmailAddress-'+ externalCartLineId}">@recilientEmailLabel*</label>
    <input type="text" data-bind="attr: {id:'shippingEmailAddress-'+ externalCartLineId}, value: shippingEmail" placeholder="@recilientEmailLabelPlaceholder">
</div>
<div class="send-byemail-message">
    <label data-bind="attr:{for:'shippingEmailMessage-'+ externalCartLineId}">@writeMessageLabel</label>
    <textarea rows="3" data-bind="attr: {id:'shippingEmailMessage-'+ externalCartLineId}, value: shippingEmailContent"></textarea>
</div>
