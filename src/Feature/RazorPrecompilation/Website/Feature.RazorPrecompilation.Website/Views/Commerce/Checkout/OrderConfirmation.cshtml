@using Sitecore.XA.Foundation.MarkupDecorator.Extensions
@using Sitecore.XA.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Commerce.XA.Feature.Cart.Models

@model OrderConfirmationRenderingModel

<div @Html.Sxa().Component("cxa-checkoutorderconfirmation-component", Model.Attributes) )>
    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        @Model.ErrorMessage
    }
    else
    {
        <p class="order-number">
            @Html.Sitecore().Field("Confirmation Number Label", Html.Sitecore().CurrentItem): <span>@Model.ConfirmationId</span>
        </p>
        <p class="order-status">
            @Html.Sitecore().Field("Status Label", Html.Sitecore().CurrentItem): <span>@Model.OrderStatus</span>
        </p>
    }
</div>
