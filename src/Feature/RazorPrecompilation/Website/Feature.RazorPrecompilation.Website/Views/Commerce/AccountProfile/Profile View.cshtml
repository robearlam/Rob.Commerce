@using Sitecore.XA.Foundation.MarkupDecorator.Extensions
@using Sitecore.XA.Foundation.SitecoreExtensions.Extensions


@model Sitecore.Commerce.XA.Feature.Account.Models.ProfileViewRenderingModel

@{
    var currentItem = Html.Sitecore().CurrentItem;

    var showProfileViewHeader = Model.ShowProfileViewHeader;
    var profileEditLink = Model.ProfileEditLink;

    var userInfo = !string.IsNullOrEmpty(Model.Email)? Model.Email: Model.UserName;
    var firstName = Model.FirstName;
    var lastName = Model.LastName;
}

<div @Html.Sxa().Component("cxa-profileview-component", Model.Attributes)>
    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        @Model.ErrorMessage
    }
    else
    {
        <div class="component-content">
            @if (showProfileViewHeader)
            {

                    <h2 class="profile-view-title" title="@currentItem["Profile View Tooltip"]">@Html.Sitecore().Field("Profile View Header", currentItem)</h2>

            }
            <div class="profile-list">
                <div class="profile-name-section">
                    <span class="first-name">@firstName</span>
                    <span class="last-name">@lastName</span>
                </div>
                <div class="profile-id-section">
                    <a class="profile-id" title="@currentItem["Edit Profile Tooltip"]" href="@profileEditLink">@userInfo</a>
                    <a class="edit-profile" title="@currentItem["Edit Profile Tooltip"]" href="@profileEditLink"><span class="edit-profile-button"></span><span class="edit-profile-text">@Html.Sitecore().Field("Edit Profile Label", currentItem)</span></a>
                </div>
            </div>
        </div>
    }
</div>