<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:unicorn="http://www.sitecore.net/xmlconfig/unicorn/">
    <sitecore>
        <unicorn>
            <configurations>
                <configuration name="Foundation.Rules" description="Rules" extends="Helix.Base">
                    <predicate type="Unicorn.Predicates.SerializationPresetPredicate, Unicorn" singleInstance="true">

                        <!-- Rules -->
                        <include name="Foundation.Rules.HasPurchasedContextProductCondition" database="master" path="/sitecore/system/Settings/Rules/Definitions/Elements/CommerceConnect Conditional Renderings/Has Purchased Context Product Condition" />

                        <!-- Commerce Terms -->
                        <include name="Foundation.Rules.CommerceTerm.CustomerHasPurchasedProductPreviously" database="master" path="/sitecore/Commerce/Commerce Control Panel/Commerce Engine Settings/Commerce Terms/BusinessTools/Conditions/CurrentCustomerHasPurchasedCurrentProductPreviouslyCondition" />
                        <include name="Foundation.Rules.CommerceTerm.CartItemsPreviouslyPurchasedPercentOffAction" database="master" path="/sitecore/Commerce/Commerce Control Panel/Commerce Engine Settings/Commerce Terms/BusinessTools/Actions/CartItemsPreviouslyPurchasedPercentOffAction" />
                    </predicate>
                </configuration>
            </configurations>
        </unicorn>
    </sitecore>
</configuration>