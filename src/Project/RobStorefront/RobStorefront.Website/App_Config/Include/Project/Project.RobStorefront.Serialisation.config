<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:unicorn="http://www.sitecore.net/xmlconfig/unicorn/">
    <sitecore>
        <unicorn>
            <configurations>
                <configuration name="Project.RobStorefront.Serialisation" 
                               description="Project Rob Commerce serialisation items" 
                               extends="Helix.Base" 
                               dependencies="Foundation.Serialisation,Foundation.Rules,Feature.ProductCompare.Serialisation">
                    <predicate>
                        <!-- Commerce Control Panel -->
                        <include name="RobStorefront.CommerceControlPanel" database="master" path="/sitecore/Commerce/Commerce Control Panel/Storefront Settings/Storefronts/RobStorefront"/>

                        <!-- Content -->
                        <include name="RobStorefront.Content" database="master" path="/sitecore/content/RobCommerce">
                            <exclude path="/sitecore/content/RobCommerce/RobStorefront/Home/Catalogs/Habitat_Master" />
                        </include>
                        
                        <!-- Forms -->
                        <include name="RobStorefront.Forms" database="master" path="/sitecore/Forms/RobCommerce"/>
                        
                        <!-- Media Library -->
                        <include name="RobStorefront.ClothingImages" database="master" path="/sitecore/media library/Images/Robs Clothing"/>
                        <include name="RobStorefront.ProjectMediaFiles" database="master" path="/sitecore/media library/Project/RobCommerce"/>
                        <include name="RobStorefront.Theme" database="master" path="/sitecore/media library/Themes/RobCommerce"/>
                    
                        <!-- Forms -->
                        <include name="RobStorefront.Templates" database="master" path="/sitecore/templates/Project/RobCommerce"/>
                    </predicate>
                </configuration>
            </configurations>
        </unicorn>
    </sitecore>
</configuration>